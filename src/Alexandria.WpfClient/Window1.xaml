<Window x:Class="Alexandria.WpfClient.Window1" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="Alexandria" Height="300" Width="588">
	<Window.Resources>
		<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
			<ControlTemplate x:Key="ButtonTemplate" TargetType="{x:Type Button}">
				<Border BorderThickness="2"/>
			</ControlTemplate>
		</ResourceDictionary>
	</Window.Resources>
	<Grid>
		<Button Content="Play" Template="{StaticResource ButtonTemplate}" Height="8" Width="15"></Button>
		<!--<Button Style="{StaticResource ButtonTemplate}" Content="Play"/>-->
		<Grid.Background>
			<LinearGradientBrush>
				<GradientStop Offset="0.00" Color="Azure"/>
				<GradientStop Offset="0.80" Color="Gray"/>
				<GradientStop Offset="1.00" Color="LightBlue"/>
			</LinearGradientBrush>
		</Grid.Background>
	</Grid>
</Window>
